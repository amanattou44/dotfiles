## Unix like command
alias ll="ls -ltr"
alias la="ls -a"
alias ls="ls -G"

alias vi="vim"
alias hist="history -i"
alias mkdir="mkdir -p"

alias grep="grep --color"
alias diff="colordiff"

## User command
alias g="git"

alias r="ruby"
alias py="python"

alias b="bundle"
alias be="b exec"
alias bes="be spring"
alias besr="bes rake"

alias e="express"

alias rs="redscript"
alias cs="coffee"

alias gist="gist -o"

alias pybrew="pythonbrew"

# tmux command
alias tmuxn="tmux new-session \; source-file ~/.tmux/session"

# brew コマンドを使用する時だけPATHからopt/ImageMagick/binを抜く
alias brew="env PATH=${PATH/\/opt\/ImageMagick\/bin:/} brew"

# ctagsのmac用コマンド
alias ctags="`brew --prefix`/bin/ctags"

# 画像のプレビュー機能
alias ql='qlmanage -p "$@" >& /dev/null'

# pyenvのconfig warningを出さないようにするための設定
alias brew='env PATH=${PATH/\/Users\/tasukujp\/\.pyenv\/shims:/} brew'
